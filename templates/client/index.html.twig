{% extends 'base.html.twig' %}

{% block title %}Clients Management{% endblock %}

{% block body %}
<div class="container">
    <div class="row">
        <div class="col-12">
            <div class="d-flex justify-content-between align-items-center mb-4">
                <h1 class="h2 text-primary">
                    <i class="bi bi-people"></i> Clients Management
                </h1>
                <a href="{{ path('app_client_new') }}" class="btn btn-success">
                    <i class="bi bi-person-plus"></i> Add New Client
                </a>
            </div>

            <div class="card shadow-sm">
                <div class="card-header bg-light">
                    <h5 class="card-title mb-0">
                        <i class="bi bi-list-ul"></i> All Clients
                    </h5>
                </div>
                <div class="card-body p-0">
                    {% if clients is not empty %}
                        <div class="table-responsive">
                            <table class="table table-hover mb-0">
                                <thead class="table-dark">
                                    <tr>
                                        <th scope="col">
                                            <i class="bi bi-hash"></i> ID
                                        </th>
                                        <th scope="col">
                                            <i class="bi bi-person"></i> Last Name
                                        </th>
                                        <th scope="col">
                                            <i class="bi bi-person"></i> First Name
                                        </th>
                                        <th scope="col">
                                            <i class="bi bi-geo-alt"></i> Address
                                        </th>
                                        <th scope="col" class="text-center">
                                            <i class="bi bi-gear"></i> Actions
                                        </th>
                                    </tr>
                                </thead>
                                <tbody>
                                {% for client in clients %}
                                    <tr>
                                        <td class="fw-bold text-muted">{{ client.id }}</td>
                                        <td>
                                            <strong>{{ client.nom }}</strong>
                                        </td>
                                        <td>{{ client.prenom }}</td>
                                        <td>
                                            <i class="bi bi-geo-alt text-muted"></i> 
                                            {{ client.adresse }}
                                        </td>
                                        <td class="text-center">
                                            <div class="btn-group" role="group">
                                                <a href="{{ path('app_client_show', {'id': client.id}) }}" 
                                                   class="btn btn-outline-info btn-sm" title="View Details">
                                                    <i class="bi bi-eye"></i>
                                                </a>
                                                <a href="{{ path('app_client_edit', {'id': client.id}) }}" 
                                                   class="btn btn-outline-warning btn-sm" title="Edit">
                                                    <i class="bi bi-pencil"></i>
                                                </a>
                                            </div>
                                        </td>
                                    </tr>
                                {% endfor %}
                                </tbody>
                            </table>
                        </div>
                    {% else %}
                        <div class="text-center py-5">
                            <i class="bi bi-people display-1 text-muted"></i>
                            <h4 class="text-muted mt-3">No clients found</h4>
                            <p class="text-muted">Start by adding your first client.</p>
                            <a href="{{ path('app_client_new') }}" class="btn btn-primary">
                                <i class="bi bi-person-plus"></i> Add First Client
                            </a>
                        </div>
                    {% endif %}
                </div>
            </div>
        </div>
    </div>
</div>
{% endblock %}
