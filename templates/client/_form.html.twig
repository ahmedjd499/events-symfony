<div class="card shadow-sm">
    <div class="card-header bg-info text-white">
        <h5 class="card-title mb-0">
            <i class="bi bi-person"></i> Client Information
        </h5>
    </div>
    <div class="card-body">
        {{ form_start(form, {'attr': {'class': 'needs-validation', 'novalidate': true}}) }}
            <div class="row">
                <div class="col-md-6 mb-3">
                    {{ form_label(form.nom, null, {'label_attr': {'class': 'form-label fw-bold'}}) }}
                    {{ form_widget(form.nom, {'attr': {'class': 'form-control', 'placeholder': 'Enter last name'}}) }}
                    {{ form_errors(form.nom) }}
                </div>
                <div class="col-md-6 mb-3">
                    {{ form_label(form.prenom, null, {'label_attr': {'class': 'form-label fw-bold'}}) }}
                    {{ form_widget(form.prenom, {'attr': {'class': 'form-control', 'placeholder': 'Enter first name'}}) }}
                    {{ form_errors(form.prenom) }}
                </div>
            </div>
            
            <div class="mb-3">
                {{ form_label(form.adresse, null, {'label_attr': {'class': 'form-label fw-bold'}}) }}
                {{ form_widget(form.adresse, {'attr': {'class': 'form-control', 'placeholder': 'Enter complete address', 'rows': '3'}}) }}
                {{ form_errors(form.adresse) }}
            </div>
            
            <div class="d-flex gap-2">
                <button type="submit" class="btn btn-success">
                    <i class="bi bi-check-circle"></i> {{ button_label|default('Save Client') }}
                </button>
                <a href="{{ path('app_client_index') }}" class="btn btn-secondary">
                    <i class="bi bi-arrow-left"></i> Back to List
                </a>
            </div>
        {{ form_end(form) }}
    </div>
</div>
