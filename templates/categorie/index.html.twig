{% extends 'base.html.twig' %}

{% block title %}Categories Management{% endblock %}

{% block body %}
<div class="container">
    <div class="row">
        <div class="col-12">
            <div class="d-flex justify-content-between align-items-center mb-4">
                <h1 class="h2 text-primary">
                    <i class="bi bi-tags"></i> Categories Management
                </h1>
                <a href="{{ path('app_categorie_new') }}" class="btn btn-success">
                    <i class="bi bi-plus-circle"></i> Add New Category
                </a>
            </div>

            <div class="card shadow-sm">
                <div class="card-header bg-light">
                    <h5 class="card-title mb-0">
                        <i class="bi bi-list-ul"></i> All Categories
                    </h5>
                </div>
                <div class="card-body p-0">
                    {% if categories is not empty %}
                        <div class="table-responsive">
                            <table class="table table-hover mb-0">
                                <thead class="table-dark">
                                    <tr>
                                        <th scope="col">
                                            <i class="bi bi-hash"></i> ID
                                        </th>
                                        <th scope="col">
                                            <i class="bi bi-tag"></i> Name
                                        </th>
                                        <th scope="col" class="text-center">
                                            <i class="bi bi-gear"></i> Actions
                                        </th>
                                    </tr>
                                </thead>
                                <tbody>
                                {% for categorie in categories %}
                                    <tr>
                                        <td class="fw-bold text-muted">{{ categorie.id }}</td>
                                        <td>
                                            <span class="badge bg-primary fs-6">{{ categorie.nom }}</span>
                                        </td>
                                        <td class="text-center">
                                            <div class="btn-group" role="group">
                                                <a href="{{ path('app_categorie_show', {'id': categorie.id}) }}" 
                                                   class="btn btn-outline-info btn-sm" title="View Details">
                                                    <i class="bi bi-eye"></i>
                                                </a>
                                                <a href="{{ path('app_categorie_edit', {'id': categorie.id}) }}" 
                                                   class="btn btn-outline-warning btn-sm" title="Edit">
                                                    <i class="bi bi-pencil"></i>
                                                </a>
                                            </div>
                                        </td>
                                    </tr>
                                {% endfor %}
                                </tbody>
                            </table>
                        </div>
                    {% else %}
                        <div class="text-center py-5">
                            <i class="bi bi-inbox display-1 text-muted"></i>
                            <h4 class="text-muted mt-3">No categories found</h4>
                            <p class="text-muted">Start by creating your first category.</p>
                            <a href="{{ path('app_categorie_new') }}" class="btn btn-primary">
                                <i class="bi bi-plus-circle"></i> Create First Category
                            </a>
                        </div>
                    {% endif %}
                </div>
            </div>
        </div>
    </div>
</div>
{% endblock %}
