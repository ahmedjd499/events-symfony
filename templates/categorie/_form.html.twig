<div class="card shadow-sm">
    <div class="card-header bg-primary text-white">
        <h5 class="card-title mb-0">
            <i class="bi bi-tag"></i> Category Information
        </h5>
    </div>
    <div class="card-body">
        {{ form_start(form, {'attr': {'class': 'needs-validation', 'novalidate': true}}) }}
            <div class="mb-3">
                {{ form_label(form.nom, null, {'label_attr': {'class': 'form-label fw-bold'}}) }}
                {{ form_widget(form.nom, {'attr': {'class': 'form-control', 'placeholder': 'Enter category name'}}) }}
                {{ form_errors(form.nom) }}
            </div>
            
            <div class="d-flex gap-2">
                <button type="submit" class="btn btn-success">
                    <i class="bi bi-check-circle"></i> {{ button_label|default('Save Category') }}
                </button>
                <a href="{{ path('app_categorie_index') }}" class="btn btn-secondary">
                    <i class="bi bi-arrow-left"></i> Back to List
                </a>
            </div>
        {{ form_end(form) }}
    </div>
</div>
