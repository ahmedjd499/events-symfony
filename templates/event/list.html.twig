{% extends 'base.html.twig' %}

{% block title %}Events List{% endblock %}

{% block body %}
<div class="container">
    <div class="row">
        <div class="col-12">
            <div class="d-flex justify-content-between align-items-center mb-4">
                <h1 class="h2 text-primary">
                    <i class="bi bi-calendar3"></i> Events Management
                </h1>
                <a href="{{ path('app_event_new') }}" class="btn btn-success">
                    <i class="bi bi-plus-circle"></i> Create New Event
                </a>
            </div>

            <div class="card shadow-sm">
                <div class="card-header bg-light">
                    <h5 class="card-title mb-0">
                        <i class="bi bi-list-ul"></i> All Events
                    </h5>
                </div>
                <div class="card-body p-0">
                    {% if events is not empty %}
                        <div class="table-responsive">
                            <table class="table table-hover mb-0">
                                <thead class="table-dark">
                                    <tr>
                                        <th scope="col">
                                            <i class="bi bi-hash"></i> ID
                                        </th>
                                        <th scope="col">
                                            <i class="bi bi-calendar-event"></i> Event Name
                                        </th>
                                        <th scope="col">
                                            <i class="bi bi-calendar-date"></i> Start Date
                                        </th>
                                        <th scope="col">
                                            <i class="bi bi-calendar-date"></i> End Date
                                        </th>
                                        <th scope="col">
                                            <i class="bi bi-geo-alt"></i> Location
                                        </th>
                                        <th scope="col">
                                            <i class="bi bi-tag"></i> Category
                                        </th>
                                        <th scope="col" class="text-center">
                                            <i class="bi bi-gear"></i> Actions
                                        </th>
                                    </tr>
                                </thead>
                                <tbody>
                                {% for event in events %}
                                    <tr>
                                        <td class="fw-bold text-muted">{{ event.id }}</td>
                                        <td>
                                            <strong class="text-primary">{{ event.nom }}</strong>
                                        </td>
                                        <td>
                                            <span class="badge bg-info">
                                                <i class="bi bi-calendar"></i>
                                                {{ event.dateD|date('Y-m-d H:i') }}
                                            </span>
                                        </td>
                                        <td>
                                            <span class="badge bg-secondary">
                                                <i class="bi bi-calendar"></i>
                                                {{ event.dateF|date('Y-m-d H:i') }}
                                            </span>
                                        </td>
                                        <td>
                                            <i class="bi bi-geo-alt text-muted"></i>
                                            {{ event.lieu }}
                                        </td>
                                        <td>
                                            <span class="badge bg-primary">{{ event.categorie.nom }}</span>
                                        </td>
                                        <td class="text-center">
                                            <div class="btn-group" role="group">
                                                <a href="{{ path('app_event_edit', {'id': event.id}) }}" 
                                                   class="btn btn-outline-warning btn-sm" title="Edit">
                                                    <i class="bi bi-pencil"></i>
                                                </a>
                                                <a href="{{ path('app_event_delete', {'id': event.id}) }}" 
                                                   class="btn btn-outline-danger btn-sm" 
                                                   title="Delete"
                                                   onclick="return confirm('Are you sure you want to delete this event?')">
                                                    <i class="bi bi-trash"></i>
                                                </a>
                                            </div>
                                        </td>
                                    </tr>
                                {% endfor %}
                                </tbody>
                            </table>
                        </div>
                    {% else %}
                        <div class="text-center py-5">
                            <i class="bi bi-calendar-x display-1 text-muted"></i>
                            <h4 class="text-muted mt-3">No events found</h4>
                            <p class="text-muted">Start by creating your first event.</p>
                            <a href="{{ path('app_event_new') }}" class="btn btn-primary">
                                <i class="bi bi-plus-circle"></i> Create First Event
                            </a>
                        </div>
                    {% endif %}
                </div>
            </div>
        </div>
    </div>
</div>
{% endblock %}
